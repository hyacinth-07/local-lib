<h1><%= title %></h1>

<form action="" method="post">
	<div class="form-group">
		<label for="first_name">First Name: </label>
		<input
			type="text"
			id="first_name"
			class="form-control"
			placeholder="Christian"
			name="first_name"
			required
		/>
		<label for="family_name">Family Name: </label>
		<input
			type="text"
			id="family_name"
			class="form-control"
			placeholder="Surname"
			name="family_name"
			required
		/>
	</div>
	<div class="form-group">
		<label for="date_of_birth">Date of Birth: </label>
		<input
			type="date"
			id="date_of_birth"
			class="form-control"
			name="date_of_birth"
		/>
		<label for="date_of_death">Date of Death: </label>
		<input
			type="date"
			id="date_of_death"
			class="form-control"
			name="date_of_death"
		/>
	</div>
	<button class="btn btn-primary" type="submit">Submit</button>
</form>
